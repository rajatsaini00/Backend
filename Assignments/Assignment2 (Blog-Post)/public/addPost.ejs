<html>
<head>
    <title>Blog Posts</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <header>
        <div class="container">
            <h1>Blog Posts</h1>
        </div>
    </header>
    <nav>
        <div class="container">
            <a href="/posts">Home</a>
            <a href="/add-post">Add New Post</a>
        </div>
    </nav>
    <div class="container post-list">
        <ul>
            <% posts.forEach(post => { %>
                <li>
                    <a href="/post?id=<%= post.id %>" class="post-title"><%= post.title %></a>
                    <p class="post-excerpt"><%= post.content.substring(0, 100) %>...</p>
                </li>
            <% }) %>
        </ul>
    </div>
    <footer>
        <div class="container">
            <p>&copy; 2025 Blog App</p>
        </div>
    </footer>
</body>
</html>